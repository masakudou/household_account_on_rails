<% provide(:title, '新規会員登録') %>
<div class="register-title">
  <h1>新規会員登録</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 register-form">
    <%= form_for(@user) do |f| %>
      <%= f.label :name, "ユーザーID(必須項目)"%>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "メールアドレス(必須項目)" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード(必須項目)" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワードの確認(必須項目)" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "会員登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
