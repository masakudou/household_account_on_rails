<% provide(:title, @user.name + " さんのプロフィール") %>

<div class="profile_infomation">
  <div class="profile-header">
    <%= image_tag(@user.header_image.url, class: "img-responsive header-image") %>
  </div>
  <div class="col-md-3 profile-sidebar">
    <div class="profile-icon">
      <%= image_tag(@user.img.url, class: "img-responsive icon-image") %>
    </div>
    <div class="profile-name">
      <%= "#{@user.name} さん" %>
    </div>
    <div class="profile-created_at">
      <%= "#{@user.created_at.strftime('%Y年%m月%d')}日に登録" %>
    </div>
  </div>
  <div class="col-md-9 profile-information">
    <%= render("shared/carousel", user: @user) %>
  <div>
</div>