<% provide(:title, "基本情報の変更") %>
<div class="settings-title">
  基本情報の変更
</div>
<div class="row">
  <%= render("shared/setting_sidebar", settings: @settings_class, images: @images_class, category: @category_class) %>
  <div class="col-md-6 settings-form">
    <%= form_for(@user, url: user_path(@user)) do |f| %>
      <%= render("shared/error_messages") %>

      <%= f.label :name, "ユーザー名"%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "パスワードの確認" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "設定の変更", class: "btn settings-update-button" %>
    <% end %>
  </div>
</div>
